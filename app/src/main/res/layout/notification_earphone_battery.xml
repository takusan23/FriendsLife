<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notification_earphone_battery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FriendsLife"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/notification_earphone_battery_left_icon"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/earphone_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="L"
                android:textColor="#0288d1" />

            <TextView
                android:id="@+id/notification_earphone_battery_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/notification_earphone_battery_case_icon"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/earphone_case" />

            <TextView
                android:id="@+id/notification_earphone_battery_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/notification_earphone_battery_right_icon"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/earphone_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="R"
                android:textColor="#d32f2f" />

            <TextView
                android:id="@+id/notification_earphone_battery_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/notification_earphone_battery_sync"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_sync_24" />
    </LinearLayout>

</LinearLayout>